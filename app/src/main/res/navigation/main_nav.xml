<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/movieDetails"
        android:name="com.example.imdbclone.fragments.details.MovieDetails"
        android:label="Movie Details"
        tools:layout="@layout/fragment_movie_details" >
        <argument
            android:name="movie"
            app:argType="com.example.imdbclone.network.Movie" />
        <action
            android:id="@+id/action_movieDetails_to_homePage"
            app:destination="@id/homePage" />
        <action
            android:id="@+id/action_movieDetails_to_searchPage"
            app:destination="@id/searchPage" />
        <action
            android:id="@+id/action_movieDetails_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.imdbclone.fragments.main.MainFragment"
        android:label="IMDB Clone APP"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_homePage"
            app:destination="@id/homePage" />
        <action
            android:id="@+id/action_mainFragment_to_searchPage"
            app:destination="@id/searchPage" />
        <action
            android:id="@+id/action_mainFragment_to_movieDetails"
            app:destination="@id/movieDetails" />
    </fragment>
    <fragment
        android:id="@+id/homePage"
        android:name="com.example.imdbclone.fragments.home.HomeFragment"
        android:label="HomePage" >
        <action
            android:id="@+id/action_homePage_to_movieDetails"
            app:destination="@id/movieDetails" />
    </fragment>
    <fragment
        android:id="@+id/searchPage"
        android:name="com.example.imdbclone.fragments.search.SearchFragment"
        android:label="fragment_search_page"
        tools:layout="@layout/fragment_search_page" >
        <action
            android:id="@+id/action_searchPage_to_movieDetails"
            app:destination="@id/movieDetails" />
    </fragment>
</navigation>