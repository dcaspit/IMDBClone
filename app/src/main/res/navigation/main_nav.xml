<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/movieDetails"
        android:name="com.example.imdbclone.fragments.movieDetails.MovieDetails"
        android:label="Movie Details"
        tools:layout="@layout/fragment_movie_details" >
        <argument
            android:name="movieData"
            app:argType="com.example.imdbclone.models.MovieData" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.imdbclone.fragments.main.MainFragment"
        android:label="IMDB Clone APP"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_movieDetails"
            app:destination="@id/movieDetails"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
</navigation>